<div class="blogs">
	<h3 class="section-heading blogs-heading">
	  {{ section.settings.title }}
	</h3>
	<div class="container">
	  <ul class="blogs-holder">
		{% for block in section.blocks %}
			{% assign item = block.settings.article %}  
		<li class="blogs-list">
          <a href="{{ item.url }}">
		  <div class="blogs-list-holder" {% if item.image.src %}style="background: url('{{ item.image.src | img_url: '1080x' }}'); background-size: cover; background-position: center; background-blend-mode: overlay; background-color: #74754e; "{% endif %}>
			<h6 class="blogs-list-heading">
			  {{ item.title }}
			</h6>
			<div class="blogs-list-details">
				{{ item.content | strip_html | truncatewords: 30, '...' }}
			</div>
		  </div>
          </a>
		</li>
		{% endfor %}
	  </ul>
	</div>
  </div>

{% schema %}

{
    "name": "Blogs",
    "class": "be-blogs",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Section Heading"
        }
    ],
    "blocks": [
        {
            "name": "Blog Article",
            "type": "blog_article",
            "settings": [
                {
                    "type": "article",
                    "id": "article",
                    "label": "Choose Article"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "BE",
            "name": "Blogs"
        }
    ]
}

{% endschema %}