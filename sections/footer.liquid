<script>

  var cart = document.getElementById('cart');

  cart.addEventListener('click', function (e) {
    populateMiniCart();
    e.stopPropagation();
  });
  
  // delete item from mini cart
  $(document).on("click", "#mini-cart-products-holder .delete-btn" ,function () {
	const id = parseInt($(this).closest(".products-list").data("id"));
    const quantity = 0;
    jQuery.post('/cart/change.js', { id: id, quantity: quantity });
    setTimeout(function() {populateMiniCart(); cart_count();}, 400);
  });
  
  // reduce 1 quantity of item to mini cart
  $(document).on("click", "#mini-cart-products-holder .product-quantity-holder .minus" ,function () {
	const id = parseInt($(this).closest(".products-list").data("id"));
    const quantity = parseInt($(this).closest(".products-list").find('.quantity').text()) - 1;
    if (quantity >= 1) {
      $(this).closest(".products-list").find('.quantity').text(quantity);
      jQuery.post('/cart/change.js', { id: id, quantity: quantity });
      setTimeout(function() {populateMiniCart()}, 400);
    }
  });
  
  // add 1 quantity of item to mini cart
  $(document).on("click", "#mini-cart-products-holder .product-quantity-holder .plus" ,function () {
	const id = parseInt($(this).closest(".products-list").data("id"));
    const quantity = parseInt($(this).closest(".products-list").find('.quantity').text()) + 1;
    $(this).closest(".products-list").find('.quantity').text(quantity);
    jQuery.post('/cart/change.js', { id: id, quantity: quantity });
    setTimeout(function() {populateMiniCart()}, 400);
  });

  function populateMiniCart() {
//     $(".mini-cart-holder .minicart-loader-bg").show();
    fetch('/cart.js')
      .then((resp) => resp.json())
      .then(function (data) {
        console.log(data);
        document.getElementById('mini-cart-products-holder').innerHTML = '';
        document.getElementById('mini-cart-total').innerHTML = '';
        if (data.items.length > 0) {
          $(".mini-cart .total-cost").show();
          $(".mini-cart .checkout-btn").show();
          $("#mini-cart-empty").hide();
          document.getElementById('mini-cart-total').innerHTML += `${data.currency} ${data.total_price/100}`;
          data.items.forEach(function (product, index) {
            document.getElementById('mini-cart-products-holder').innerHTML +=
              `<div class="products-list" data-id="${product.id }">
                <div class="products-image">
                  <a href="${product.url}"><img width="200" src="${product.image}&width=200"></a>
                </div>
                <div class="product-details">
                  <div class="products-header"><a href="${product.url}">${product.title}</a></div>
                  <div class="products-details">${product.vendor}</div>
                  <div class="products-price">${data.currency} ${product.price/100}</div>	
                  <div class="holder">
                    <div class="product-quantity-holder">
                      <div class="product-quantity">
                        <span class="minus"><a>-</a></span>
                        <span class="quantity">${product.quantity}</span>
                        <span class="plus"><a>+</a></span>
                      </div>
                    </div>
                    <div class="delete-btn">
                      <a href="#"><img src="{{ 'delete.png' | asset_url }}"></a>
                    </div>
                  </div>					
                </div>
              </div>`;
          });
//           $(".mini-cart-holder .minicart-loader-bg").hide();
        } else {
          $(".mini-cart .total-cost").hide();
          $(".mini-cart .checkout-btn").hide();
          $("#mini-cart-empty").show();
          document.getElementById('mini-cart-empty').innerHTML = '<div class="heading">The Cart Is Empty<br/></div>';
        }
      })
      .catch((err) => console.log(err));
  }

function cart_count() {
	fetch('/cart.js')
		.then((resp) => resp.json())
		.then(
			(data) =>
				(document.getElementById('cart-count').innerHTML = data.items.length)
		)
		.catch((err) => console.log);
}

document.addEventListener('DOMContentLoaded', function () {
	cart_count();
});

$(document).on("click", "#cart-del-btn" ,function () { 
  console.log("delete click");
  setTimeout(function() {cart_count()}, 400);  
});

</script>

{% javascript %}
  class LocalizationForm extends HTMLElement {
    constructor() {
      super();
      this.elements = {
        input: this.querySelector('input[name="locale_code"], input[name="country_code"]'),
        button: this.querySelector('button'),
        panel: this.querySelector('ul'),
      };
      this.elements.button.addEventListener('click', this.openSelector.bind(this));
      this.elements.button.addEventListener('focusout', this.closeSelector.bind(this));
      this.addEventListener('keyup', this.onContainerKeyUp.bind(this));

      this.querySelectorAll('a').forEach(item => item.addEventListener('click', this.onItemClick.bind(this)));
    }

    hidePanel() {
      this.elements.button.setAttribute('aria-expanded', 'false');
      this.elements.panel.setAttribute('hidden', true);
    }

    onContainerKeyUp(event) {
      if (event.code.toUpperCase() !== 'ESCAPE') return;

      this.hidePanel();
      this.elements.button.focus();
    }

    onItemClick(event) {
      event.preventDefault();
      const form = this.querySelector('form');
      this.elements.input.value = event.currentTarget.dataset.value;
      if (form) form.submit();
    }

    openSelector() {
      this.elements.button.focus();
      this.elements.panel.toggleAttribute('hidden');
      this.elements.button.setAttribute('aria-expanded', (this.elements.button.getAttribute('aria-expanded') === 'false').toString());
    }

    closeSelector(event) {
      const shouldClose = event.relatedTarget && event.relatedTarget.nodeName === 'BUTTON';
      if (event.relatedTarget === null || shouldClose) {
        this.hidePanel();
      }
    }
  }

  customElements.define('localization-form', LocalizationForm);
{% endjavascript %}

