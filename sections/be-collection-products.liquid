{%- paginate collection.products by 2 -%}
<div class="categories-products">
    <div class="container">
        <ul class="categories-products-holder">
            {% for product in collection.products %}
                {%- assign image = product.featured_media.preview_image -%}
                <li class="categories-list-holder">
                    <div class="categories-list">
                        <a href="{{ product.url }}">
                            <img src="{{ image | img_url: '240x'}}" alt="{{ product.title }}">
                        </a>
                        <h6 class="product-name">
                            <a href="{{ product.url }}">{{ product.title }}</a>
                        </h6>
                        <div class="product-details">
                            {{ product.vendor }}
                        </div>
                        <div class="product-price">
                            <span class="currency">&#8377</span>
                            {{ product.price | money_without_trailing_zeros}}
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>

		{%- if paginate.pages > 1 -%}
		<div class="pagination">
			{%- if paginate.previous.is_link -%}
			<li id="previous-page"><a href="{{ paginate.previous.url }}"><span aria-hidden="false">
				<i class="fas fa-arrow-left"></i>
			</span></a>
			</li>
			{% endif %}			
            {%- for part in paginate.parts -%}
                {%- if part.is_link -%}
                    <li class="page-item">
                        <a href="{{ part.url }}" class="page-link">{{ part.title }}</a>
                    </li>
                {%- else -%}
                    <li class="page-item disabled">
                        <a href="{{ part.url }}" class="page-link">{{ part.title }}</a>
                    </li>
                {%- endif -%}
            {%- endfor -%}
			{%- if paginate.next.is_link -%}
			<li id="next-page"><a href="{{ paginate.next.url }}"><span aria-hidden="true">
				<i class="fas fa-arrow-right"></i>
			</span></a>
			</li>
			{% endif %}
        </div>
		{% endif %}
    </div>
</div>
{%- endpaginate -%}

{% schema %}
{
    "name": "Collection Products",
    "class": "be-collection-products",
    "tag": "section",
    "settings": []
}

{% endschema %}